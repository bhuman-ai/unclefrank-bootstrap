# Environment Variables for Uncle Frank's Platform
# Copy this to .env.local for local development
# Add these to Vercel Environment Variables for production

# GitHub Integration (REQUIRED)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=bhuman-ai/unclefrank-bootstrap

# Claude Executor on Fly.io
CLAUDE_EXECUTOR_URL=https://uncle-frank-claude.fly.dev
CLAUDE_MODEL=claude-opus-4-1-20250805

# File Paths (Use cloud storage in production!)
DRAFTS_DIR=/tmp/drafts
PROJECT_MD_PATH=/tmp/project.md

# Document Contents (Temporary - should use cloud storage)
INTERFACE_MD="# Interface.md content here"
TECHNICAL_MD="# Technical.md content here"

# Vercel URLs
VERCEL_URL=your-deployment.vercel.app

# Optional Features
CLAUDE_FALLBACK_MODE=true

# Storage Configuration (for persistence)
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here

# Authentication (optional but recommended)
REQUIRE_AUTH=false
ADMIN_TOKEN=frank-admin-token-change-this

# Retry Configuration
MAX_RETRIES=3
RETRY_INITIAL_DELAY=1000
CIRCUIT_BREAKER_THRESHOLD=5